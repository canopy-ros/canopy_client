                - "ba[a-z]"
        </rosparam>

    </node>

    <node pkg="rostopic" type="rostopic" name="state_pub"
        args="pub -r 100 /state geometry_msgs/Point '{x: 1, y: 1, z: 0}'"/>
    <node pkg="rostopic" type="rostopic" name="filtered_state_pub"
